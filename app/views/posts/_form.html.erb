<%- form_for(@post) do |f| -%>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id, :value => current_user.id %><br />

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </p>
  <p>
    <%= f.submit submit_value %>
  </p>
<%- end -%>
